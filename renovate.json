{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "automerge": true,
  "schedule": ["after 7pm on Monday"],
  "git-submodules": {
    "enabled": true
  },
  "npm": {
    "extends": ["group:allNonMajor"],
    "ignoreDeps": ["jsonc-parser", "semver", "@types/semver", "@types/node", "node"],
    "rangeStrategy": "bump"
  }
}
